{
  "compilerOptions": {
    "target": "ES2020", // 输出的 JavaScript 版本
    "module": "ES2020", // 使用 ES 模块系统
    "moduleResolution": "node", // 模块解析策略
    "esModuleInterop": true, // 允许默认导入非 ES 模块
    "outDir": "./dist", // 编译后输出目录
    "rootDir": "./src", // 源文件目录
    "types": [
      "node"
    ], // 加载 Node.js 类型声明
    "strict": true // 开启严格模式
  },
  "include": [
    "src/**/*.ts"
  ], // 包含的文件
  "exclude": [
    "node_modules"
  ] // 排除的文件
}